<!DOCTYPE html>

<html>

  <%-include("partials/head.ejs") %>
    <body>
      <%-include("partials/header.ejs") %>



  <!-- CARGAR PRODUCTO -->
  <main>
    <br>
    <br>
    <br>
    
      <div >
        <br>
        <form action="/products/createProduct" method="POST" class="mp-main-createProduct mp-cont-formulario-padre " >
          <div>
            <div class="mp-cont-formulario" >
              <label  for="Producto" class="mp-label-createProduct">Producto</label>
              <input type="text" name="nombre" id="Producto"  class="mp-input-createProduct" >
            </div>

            <div class="mp-cont-formulario" >
              <label for="Marca" class="mp-label-createProduct">Marca</label>
              <input type= "text" name="marca" id="Marca" placeholder="Marca del producto" class="mp-input-createProduct" >
            </div>  
        
            <div class="mp-cont-formulario"> 
              <label for="Categoria" class="mp-label-createProduct" >Categor√≠a</label>
              <input list="Categorias" name="categoria" id="Categoria"  class="mp-input-createProduct" >
              <datalist id="Categorias">
                <option value="Quemadores de grasa">
                <option value= "Proteinas">
                <option value="Post entrenamiento">
              </datalist>
            </div>    
            <div class="mp-cont-formulario">
              <label for="pesoNeto" class="mp-label-createProduct">Peso Neto</label>
              <input type="text" name="pesoNeto" id="pesoNeto" class="mp-input-createProduct">
            </div>
            <div class="mp-cont-formulario">
              <label for="Sabores" class="mp-label-createProduct">Sabores</label>
                <div>
                  <input type="text" name="sabores" id="sabores" class="mp-input-createProduct">
                  <input type="button" value="Agregar Sabor" class="mp-button-createProduct">
                </div>
            </div>
            <div class="mp-cont-formulario">
                <p></p>
                <ul> <!-- se deberian agregar en una lista los sabores que se van     agregando-->
                  <li>Banana</li>
                  <li>Chocolate</li>
                </ul>
            </div> 
                          
            <div class="mp-cont-formulario">
                <label for="precio" class="mp-label-createProduct">Precio</label>
                <input type="text" name="precio" id="pesoNeto" class="mp-input-createProduct">
            </div>
          
            <div class="mp-cont-formulario">
                <label for="tipoDeEnvase" class="mp-label-createProduct">Tipo de Envase</label>
                <input type="text" name="tipoDeEnvase" id="tipoDeEnvase" class="mp-input-createProduct">
            </div>
            <div class="mp-cont-formulario">
              <label for="modoDeUso" class="mp-label-createProduct">Modo de uso</label>
              <textarea name="modoDeUso" id="modoDeUso" rows="10" cols="10" class="mp-textarea-createProduct"></textarea>
            </div>
          </div>
          <div>
              <div class="mp-cont-formulario">
                <label for="ingredientes" class="mp-label-createProduct">Ingredientes</label>
                <textarea name="ingredientes" id="ingredientes" rows="10" cols="10" class="mp-textarea-createProduct" ></textarea>
            </div>
            <div class="mp-cont-formulario" >
              <label id="formulario-texto" class="mp-label-createProduct">Imagenes</label>
              <input type="file" name="productImg" value="Cargar imagenes" accept=".jpg" class="Cuenta">
            </div>
            <div class="mp-cont-formulario">
              <p></p>
              <div class="mp-img-formulario">
                <img src="/img/Multifruta.JPG" id="mp-img-createProduct"></img>
                <img src="/img/products/nitro_whey.jpg" id="mp-img-createProduct">
                <img src="/img/products/pump.jpg" id="mp-img-createProduct">
              </div>
            </div>
            <div class="mp-cont-formulario-botton">
              <input type="submit" value= "AGREGAR PRODUCTO" class="Cuenta">
              <input type="reset" value= "BORRAR" class="Cuenta"> 
            </div>
          </div>
        </form>
     </div>

     <%-include("partials/footer.ejs") %>
</body>
</html>
